{
  "apiVersion": "v1",
  "kind": "LimitRange",
  "metadata": {
    "name": "default-limits"
  },
  "spec": {
    "limits": [
      {
        "type": "Container",
        "max": {
          "cpu": "4",
          "memory": "1024Mi"
        },
        "default": {
          "cpu": "4",
          "memory": "1024Mi"
        },
        "defaultRequest": {
          "cpu": "0",
          "memory": "0Mi"
        }
      }
    ]
  }
}